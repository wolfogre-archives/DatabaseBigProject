<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="conststructs.devMode" value="true"/>
    <package name="com.wolfogre" extends="struts-default">
        <action name="check-login" class="com.wolfogre.action.CheckLoginAction">
            <result name="error">/index.jsp</result>
            <result name="STUDENT" type="redirect">/student/index.jsp</result>
            <result name="TEACHER" type="redirect">/teacher/index.jsp</result>
            <result name="MANAGER" type="redirect">/manager/index.jsp</result>
        </action>
        <action name="logout" class="com.wolfogre.action.LogoutAction">
            <result type="redirect">/index.jsp</result>
        </action>
    </package>
</struts>