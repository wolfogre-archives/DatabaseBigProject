<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="conststructs.devMode" value="true"/>
    <package name="com.wolfogre" extends="struts-default">
        <action name="check-login" class="com.wolfogre.action.CheckLoginAction">
            <result name="error">/index.jsp</result>
            <result name="STUDENT" type="redirect">studentIndex.action</result>
            <result name="TEACHER" type="redirect">teacherIndex.action</result>
            <result name="MANAGER" type="redirect">managerIndex.action</result>
        </action>
        <action name="logout" class="com.wolfogre.action.LogoutAction">
            <result type="redirect">index.action</result>
        </action>
        <action name="student*" class="com.wolfogre.action.student.{1}Action">
            <result>/WEB-INF/content/student/{1}.jsp</result>
        </action>
        <action name="teacher*" class="com.wolfogre.action.teacher.{1}Action">
            <result>/WEB-INF/content/teacher/{1}.jsp</result>
        </action>
        <action name="manager*" class="com.wolfogre.action.manager.{1}Action">
            <result>/WEB-INF/content/manager/{1}.jsp</result>
        </action>
        <action name="index">
            <result>/index.jsp</result>
        </action>
    </package>
</struts>